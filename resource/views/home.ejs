<section class="hero py-19">
    <div class="container mx-auto flex items-center justify-between">

        <div class="w-1/2">
            <h6 class="text-lg"><em>Are You Hungry?</em></h6>
            <h1 class="text-6xl font-bold">Don't Wait</h1>
            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4">Order Now</button>

        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="pizza-image">


        </div>

    </div>

</section>

<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold flex items-center mb-8"> All pizza</h1>
    <div class="grid grid-cols-4 col-gap-12 row-gap-16">

        <% pizzas.forEach(function(pizza){ %>
            
        <div class="w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%=pizza.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%=pizza.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%=pizza.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">Rs<%=pizza.price %></span>

                    <!-- data attribute -->
                    <!-- sending json data to app.js file to get pizza from database -->
                    <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
       </div>


    <%  })%>


    </div>
</section>